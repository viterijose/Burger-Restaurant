<div class="container">
    <h1>
        <i class="material-icons">
            restaurant_menu
        </i>Burger Restaurant</h1>

    <h2>Devour a burger!</h2>
    <br>
    <ul>
        {{#each burgers}} {{#unless devoured}} {{>burgers/burger-block devoured=true }} {{/unless}} {{/each}}
    </ul>

    <h2>Devoured Burgers</h2>
    <br>
    <ul>
        {{#each burgers}} {{#if devoured}} {{>burgers/burger-block devoured=false }} {{/if}} {{/each}}
    </ul>
    <br>
    <div class="container-form">
        <h2>Add a burger to the menu</h2>
        <br>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">Devoured yet?</label>
                <br>
                <input type="radio" name="devoured" value="1" checked> DEVOURED
                <br>
                <input type="radio" name="devoured" value="0"> ON PLATE
            </div>

            <button type="submit">Add Burger to Menu</button>
        </form>
    </div>
</div>