<h1>Burger Restaurant</h1>

<h2>Eat a burger!</h2>

<ul>
    {{#each burgers}} 
        {{#unless devoured}} 
            {{>burgers/burger-block devoured=true }} 
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burger</h2>

<ul>
    {{#each burgers}} 
        {{#if devoured}} 
            {{>burgers/burger-block devoured=false }} 
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger to the menu</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> DEVOURED<br>
    <input type="radio" name="devoured" value="0"> ON PLATE
  </div>

  <button type="submit">Add Burger to Menu</button>
</form>
